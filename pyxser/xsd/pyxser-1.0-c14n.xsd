<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://projects.coder.cl/pyxser/model/" xmlns:pyxs="http://projects.coder.cl/pyxser/model/">
  <xs:element name="obj">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="pyxs:prop"/>
        <xs:element ref="pyxs:col"/>
        <xs:element ref="pyxs:obj"/>
      </xs:choice>
      <xs:attribute name="version" default="1.0">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="1.0"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="objid"/>
      <xs:attribute name="objref"/>
      <xs:attribute name="type"/>
      <xs:attribute name="name"/>
      <xs:attribute name="module"/>
      <xs:attribute name="size"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="col">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="pyxs:obj"/>
        <xs:element ref="pyxs:prop"/>
      </xs:choice>
      <xs:attribute name="type" use="required"/>
      <xs:attribute name="name" use="required"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="prop">
    <xs:complexType mixed="true">
      <xs:attribute name="type" use="required"/>
      <xs:attribute name="name"/>
      <xs:attribute name="size"/>
      <xs:attribute name="compress">
        <xs:simpleType>
          <xs:restriction base="xs:token">
            <xs:enumeration value="yes"/>
            <xs:enumeration value="no"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
      <xs:attribute name="encoding">
        <xs:simpleType>
          <xs:restriction base="xs:token">
            <xs:enumeration value="ascii"/>
            <xs:enumeration value="base64"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
    </xs:complexType>
  </xs:element>
</xs:schema>
